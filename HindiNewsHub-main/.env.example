# Environment Variables Template for Netlify Deployment
# Copy this file to .env for local development
# Set these variables in Netlify dashboard for production

# Database Configuration (Neon PostgreSQL)
# Get this from your Neon dashboard: https://console.neon.tech/
DATABASE_URL="postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Application Configuration
NODE_ENV=production
PORT=8888

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET="your-super-secure-session-secret-key-change-this-in-production"

# Authentication Configuration (if using external auth provider)
# Replace with your actual auth provider settings
ISSUER_URL="https://your-auth-provider.com/oidc"
CLIENT_ID="your-client-id"
CLIENT_SECRET="your-client-secret"

# Optional: JWT Configuration (if implementing JWT auth)
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# Optional: External API Keys
# NEWS_API_KEY="your-news-api-key"
# CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# Netlify-specific variables (automatically set by Netlify)
# NETLIFY_SITE_ID (automatically set)
# NETLIFY_SITE_URL (automatically set)
# DEPLOY_URL (automatically set)

# Development-only variables (not needed in production)
# REPLIT_DOMAINS="localhost:5000"
# REPL_ID="hindinewshub-local"